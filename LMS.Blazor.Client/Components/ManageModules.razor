@page "/manage-modules"
@using LMS.Shared.DTOs.EntitiesDtos.ModulesDtos
@using LMS.Shared.DTOs.EntitiesDtos.ProjActivity
@using LMS.Blazor.Client.Services
@using System.ComponentModel.DataAnnotations

<div class="row">
    <div class="col-12">
        @if (isLoading)
        {
            <p class="text-muted">Loading module...</p>
        }
        else if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">@errorMessage</div>
        }
        else if (activeModule == null)
        {
            <p class="text-muted">No module selected.</p>
        }
        else
        {
            <div class="row">
                <!-- LEFT COLUMN: Module info + Activity form -->
                <div class="col-md-5">
                    <div class="card sticky-top" style="top:1rem;z-index:2;">
                        <div class="card-body">
                            @* ---- MODULE HEADER ---- *@
                            @if (editingModuleId == activeModule.Id)
                            {
                                <h6>Edit Module</h6>
                                <EditForm Model="moduleEditModel" OnValidSubmit="SaveModule">
                                    <DataAnnotationsValidator />

                                    <div class="mb-2">
                                        <label class="form-label small mb-1">Name</label>
                                        <InputText class="form-control form-control-sm" @bind-Value="moduleEditModel.Name" />
                                        <ValidationMessage For="@(() => moduleEditModel.Name)" />
                                    </div>
                                    <div class="mb-2">
                                        <label class="form-label small mb-1">Description</label>
                                        <InputText class="form-control form-control-sm" @bind-Value="moduleEditModel.Description" />
                                        <ValidationMessage For="@(() => moduleEditModel.Description)" />
                                    </div>
                                    <div class="row g-2 mb-3">
                                        <div class="col">
                                            <label class="form-label small mb-1">Starts</label>
                                            <InputDate class="form-control form-control-sm" @bind-Value="moduleEditModel.Starts" />
                                            <ValidationMessage For="@(() => moduleEditModel.Starts)" />
                                        </div>
                                        <div class="col">
                                            <label class="form-label small mb-1">Ends</label>
                                            <InputDate class="form-control form-control-sm" @bind-Value="moduleEditModel.Ends" />
                                            <ValidationMessage For="@(() => moduleEditModel.Ends)" />
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-end">
                                        <button class="btn btn-sm btn-success me-2" type="submit">Save</button>
                                        <button class="btn btn-sm btn-secondary" type="button" @onclick="CancelEditModule">Cancel</button>
                                    </div>
                                </EditForm>
                            }
                            else
                            {
                                <h6>@activeModule.Name</h6>
                                <p class="text-muted">@activeModule.Starts – @activeModule.Ends</p>
                                <p>@activeModule.Description</p>

                                <div class="d-flex justify-content-end mb-3">
                                    <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => StartEditModule(activeModule)">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteModule(activeModule.Id)">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>
                            }

                            <hr />

                            @* ---- ADD/EDIT ACTIVITY FORM ---- *@
                            <h6>@(editingActivityId == null ? "Add Activity" : "Update Activity")</h6>
                            <EditForm Model="activityFormModel" OnValidSubmit="HandleActivitySubmit">
                                <DataAnnotationsValidator />

                                <div class="mb-2">
                                    <label class="form-label small mb-1">Title</label>
                                    <InputText class="form-control form-control-sm" @bind-Value="activityFormModel.Title" />
                                    <ValidationMessage For="@(() => activityFormModel.Title)" />
                                </div>
                                <div class="mb-2">
                                    <label class="form-label small mb-1">Type</label>
                                    <InputText class="form-control form-control-sm" @bind-Value="activityFormModel.Type" />
                                    <ValidationMessage For="@(() => activityFormModel.Type)" />
                                </div>
                                <div class="row g-2 mb-3">
                                    <div class="col">
                                        <label class="form-label small mb-1">Starts</label>
                                        <input type="datetime-local"
                                               class="form-control form-control-sm"
                                               value="@activityFormModel.Starts.ToString("yyyy-MM-ddTHH:mm")"
                                               @onchange="e => activityFormModel.Starts = DateTime.Parse(e.Value?.ToString() ?? DateTime.Now.ToString())" />
                                        <ValidationMessage For="@(() => activityFormModel.Starts)" />
                                    </div>
                                    <div class="col">
                                        <label class="form-label small mb-1">Ends</label>
                                        <input type="datetime-local"
                                               class="form-control form-control-sm"
                                               value="@activityFormModel.Ends.ToString("yyyy-MM-ddTHH:mm")"
                                               @onchange="e => activityFormModel.Ends = DateTime.Parse(e.Value?.ToString() ?? DateTime.Now.ToString())" />
                                        <ValidationMessage For="@(() => activityFormModel.Ends)" />
                                    </div>
                                </div>

                                <div class="d-flex justify-content-end">
                                    <button class="btn btn-sm btn-success me-2" type="submit">
                                        @(editingActivityId == null ? "Add" : "Update")
                                    </button>
                                    <button class="btn btn-sm btn-secondary" type="button" @onclick="ResetActivityForm">
                                        Cancel
                                    </button>
                                </div>
                            </EditForm>
                        </div>
                    </div>
                </div>

                <!-- RIGHT COLUMN: Activity List -->
                <div class="col-md-7">
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input class="form-control" placeholder="Filter activities..."
                               @bind="activityFilter" @bind:event="oninput" />
                        <button class="btn btn-outline-secondary"
                                @onclick="() => activityFilter = string.Empty"
                                disabled="@string.IsNullOrWhiteSpace(activityFilter)">
                            Clear
                        </button>
                    </div>

                    <ul class="list-group" style="max-height:26rem;overflow-y:auto;">
                        @if (FilteredActivities?.Any() == true)
                        {
                            @foreach (var a in FilteredActivities)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="flex-fill">
                                        <strong>@a.Title</strong> (@a.Type)<br />
                                        <small>@a.Starts – @a.Ends</small>
                                    </span>
                                    <div class="btn-group ms-2">
                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => StartEditActivity(a)">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteActivity(a.Id)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="list-group-item">
                                <p class="text-muted small mb-0">No activities yet.</p>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
    </div>
</div>