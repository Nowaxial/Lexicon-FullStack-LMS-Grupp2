@page "/courses/{id:int}"
@rendermode InteractiveWebAssembly
@attribute [Authorize(Roles = "Teacher")]
@namespace LMS.Blazor.Client.Pages

@using LMS.Shared.DTOs.EntitiesDtos
@using LMS.Shared.DTOs.EntitiesDtos.ModulesDtos
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Kurs</PageTitle>

@if (isLoading)
{
    <p class="text-muted">Loading…</p>
}
else if (!string.IsNullOrWhiteSpace(loadError))
{
    <div class="alert alert-danger">@loadError</div>
}
else if (course is null)
{
    <p class="">Ingen kurs hittat...</p>
}
else
{
    <section class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="h3 m-0 details-heading">@course.Name</h1>
            <div class="btn-group">
                <a class="btn btn-outline-secondary" href="/teacher">Tillbaka</a>
                <a class="btn btn-hero" href="@($"/courses/{course.Id}/edit")">Hantera</a>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <p class="mb-2"><strong>Beskrivning:</strong><br />@course.Description</p>
                <p class="mb-0">
                    <strong>Start:</strong> @course.Starts
                    &nbsp; | &nbsp;
                    <strong>Slut:</strong> @course.Ends
                </p>
            </div>
        </div>

        @if (modules is null || modules.Count == 0)
        {
            <div class="alert alert-info">Inga moduler i den här kursen.</div>
        }
        else
        {
            <div class="d-flex flex-column gap-3">
                @foreach (var m in modules)
                {
                    var acts = ActivitiesFor(m.Id);


                    <div class="card">
                        <div class="card-body module-card">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="m-0">@m.Name</h5>
                                <small class="text-muted">Modul #@m.Id</small>
                            </div>

                            @if (!string.IsNullOrWhiteSpace(m.Description))
                            {
                                <p class="mb-2">@m.Description</p>
                            }

                            <p class="text-muted m-0">
                                <strong>Start:</strong> @m.Starts
                                &nbsp; | &nbsp;
                                <strong>Slut:</strong> @m.Ends
                            </p>


                            <!-- Activities toggle -->
                            <div class="mt-3">
                                <button class="btn btn-sm btn-outline-secondary"
                                        type="button"
                                        @onclick="ToggleActivities"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#@ModuleCollapseId(m.Id)">
                                    @(showActivities ? "Dölja aktiviteter" : $"Visa aktiviteter ({@acts.Count})")
                                   
                                </button>
                            </div>

                            <!-- Activities accordion per module -->
                            <div class="collapse mt-2" id="@ModuleCollapseId(m.Id)">
                                @if (acts.Count == 0)
                                {
                                    <div class="small text-muted ps-1">Inga aktiviteter i den här modulen.</div>
                                }
                                else
                                {
                                    <div class="accordion" id="acc-@m.Id">
                                        @foreach (var a in acts)
                                        {
                                            var bodyId = ActivityCollapseId(m.Id, a.Id);
                                            <div class="accordion-item">
                                                <h2 class="accordion-header" id="hd-@bodyId">
                                                    <button class="accordion-button collapsed"
                                                            type="button"
                                                            data-bs-toggle="collapse"
                                                            data-bs-target="#@bodyId"
                                                            aria-expanded="false"
                                                            aria-controls="@bodyId">
                                                        <div class="d-flex w-100 justify-content-between align-items-center">
                                                            <div>
                                                                <div class="fw-semibold acts-title">@a.Title</div>
                                                                <small class="text-muted">
                                                                    @a.Starts.ToString("dd.MM.yyyy")
                                                                    &nbsp;–&nbsp;
                                                                    @a.Ends.ToString("dd.MM.yyyy")
                                                                </small>
                                                            </div>
                                                            <span class="badge bg-light text-dark border me-1">@a.Type</span>
                                                        </div>
                                                    </button>
                                                </h2>
                                                <div id="@bodyId"
                                                     class="accordion-collapse collapse"
                                                     aria-labelledby="hd-@bodyId"
                                                     data-bs-parent="#acc-@m.Id">
                                                    <div class="accordion-body">
                                                        @if (!string.IsNullOrWhiteSpace(a.Description))
                                                        {
                                                            <p class="mb-0">@a.Description</p>
                                                        }
                                                        else
                                                        {
                                                            <small class="text-muted">Ingen beskrivning.</small>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </section>
}
