@page "/"

@attribute [AllowAnonymous]
@using System.Globalization
@using LMS.Shared.DTOs.EntitiesDtos
@using Microsoft.AspNetCore.Authorization
@inject IHttpClientFactory HttpClientFactory
@inject AuthenticationStateProvider AuthenticationStateProvider


<PageTitle>Home</PageTitle>

<!-- Hero -->
<section class="lms-hero">
    <div class="container-fluid px-4">
        <div class="row align-items-start g-4">
            <div class="col-12">
                <div class="d-flex flex-wrap align-items-baseline gap-2 mb-3">
                    <h2 class="display-5 fw-bold mb-0">Välkommen till</h2>
                    <h1 class="display-5 fw-bold mb-0">LEXICON LMS</h1>
                </div>

                <p class="lead mb-4">
                    Kurser, moduler och uppgifter – samlat på ett ställe. Lär dig i din egen takt,
                    följ din progression och nå dina mål.
                </p>

                <div class="d-flex flex-column flex-lg-row gap-4 mt-4">
                    <div class="lms-hero__card flex-fill">
                        <a class="btn btn-lg btn-light btn-hero" href="courses" aria-label="Gå till kurser">
                            <i class="bi bi-journal-text me-2"></i> Utforska kurser
                        </a>
                        <ul class="lms-hero__bullets mt-3">
                            <li><i class="bi bi-check2-circle"></i> Strukturerade moduler & uppgifter</li>
                            <li><i class="bi bi-check2-circle"></i> Tydlig översikt av din progression</li>
                            <li><i class="bi bi-check2-circle"></i> Mobilvänligt & tillgängligt</li>
                        </ul>
                    </div>

                    <div class="lms-hero__card flex-fill">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-people fs-2 me-2"></i>
                            <h2 class="h4 m-0">För alla användare</h2>
                        </div>
                        <ul class="m-0 ps-3">
                            <li><i class="bi bi-check2-circle"></i> <strong>Elever</strong>: Kurser och schema</li>
                            <li><i class="bi bi-check2-circle"></i> <strong>Lärare</strong>: Administration</li>
                            <li><i class="bi bi-check2-circle"></i> Säker inloggning</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Stats -->
<section class="py-4 bg-base">
    <div class="container-fluid lms-container">
        <div class="row g-3 text-center">
            <div class="col-6 col-lg-4">
                <div class="stat">
                    <i class="bi bi-mortarboard"></i>
                    <div class="stat__num">120+</div>
                    <div class="stat__label">Aktiva kurser</div>
                </div>
            </div>
            <div class="col-6 col-lg-4">
                <div class="stat">
                    <i class="bi bi-people"></i>
                    <div class="stat__num">3 500+</div>
                    <div class="stat__label">Studenter</div>
                </div>
            </div>
            <div class="col-12 col-lg-4">
                <div class="stat">
                    <i class="bi bi-star"></i>
                    <div class="stat__num">4.8/5</div>
                    <div class="stat__label">Genomsnittligt betyg</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured courses -->
<section class="py-5">
    <div container-fluid lms-container>
        <div class="d-flex justify-content-between align-items-end mb-3">
            <h2 class="courses-header m-0">Senaste kurser</h2>
            <a class="link-accent" href="courses">Visa alla</a>
        </div>

        @if (isLoading)
        {
            <p class="text-muted">Laddar kurser…</p>
        }
        else if (!string.IsNullOrWhiteSpace(error))
        {
            <div class="alert alert-danger">@error</div>
        }
        else if (courses.Count == 0)
        {
            <p class="text-muted m-0">Inga kurser hittades.</p>
        }
        else
        {
            <div class="row g-4">
                @foreach (var c in courses)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <article class="course-card h-100">
                            <div class="course-card__body">
                                <div class="d-flex align-items-center justify-content-between mb-3">
                                    <span class="badge bg-accent-subtle text-accent">Medel</span>
                                    <small class="text-muted">@Duration(c.Starts, c.Ends)</small>
                                </div>

                                <h5 class="courses-header mb-3">@c.Name</h5>

                                @if (!string.IsNullOrWhiteSpace(c.Description))
                                {
                                    <p class="text-muted mb-2">@c.Description</p>
                                }
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar-event me-1"></i>
                                        Start @c.Starts.ToString("yyyy-MM-dd")
                                    </small>
                                    <span class="stretched-link btn-sm btn-accent">Till kurs</span>
                                </div>
                            </div>
                        </article>
                    </div>
                }
            </div>
        }
    </div>
</section>

<!-- CTA banner -->
<AuthorizeView>
    <NotAuthorized>
        <section class="py-5">
            <div class="container-fluid lms-container">
                <div class="cta-banner p-4 p-md-5 d-flex flex-column flex-md-row align-items-center justify-content-between">
                    <div class="mb-3 mb-md-0">
                        <h2 class="h4 mb-1 text-white">Elev eller lärare?</h2>
                        <p class="m-0 text-white-50">Logga in för att komma åt dina kurser och moduler.</p>
                    </div>
                    <div class="d-flex gap-3">
                        <a class="btn btn-light btn-hero" href="Account/Login"><i class="bi bi-box-arrow-in-right me-1"></i> Logga in</a>
                        <a class="btn btn-outline-light" href="courses"><i class="bi bi-journal-text me-1"></i> Utforska kurser</a>
                    </div>
                </div>
            </div>
        </section>
    </NotAuthorized>
</AuthorizeView>

