@page "/Account/Manage/TwoFactorAuthentication"
@layout ManageLayout

@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Identity
@using LMS.Blazor.Data

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject IdentityUserAccessor UserAccessor
@inject IdentityRedirectManager RedirectManager

<PageTitle>Tvåfaktorsautentisering (2FA)</PageTitle>

<div class="dash-card__head">Tvåfaktorsautentisering (2FA)</div>

<StatusMessage />

@if (canTrack)
{
    @if (is2faEnabled)
    {
        <div class="row g-3 mb-4">
            <div class="col-12">
                @if (recoveryCodesLeft == 0)
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Du har inga återställningskoder kvar.</strong>
                        <p class="mb-0 mt-2">Du måste <a href="Account/Manage/GenerateRecoveryCodes" class="alert-link">generera nya återställningskoder</a> innan du kan logga in med en återställningskod.</p>
                    </div>
                }
                else if (recoveryCodesLeft == 1)
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Du har 1 återställningskod kvar.</strong>
                        <p class="mb-0 mt-2">Du kan <a href="Account/Manage/GenerateRecoveryCodes" class="alert-link">generera nya återställningskoder</a>.</p>
                    </div>
                }
                else if (recoveryCodesLeft <= 3)
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Du har @recoveryCodesLeft återställningskoder kvar.</strong>
                        <p class="mb-0 mt-2">Du bör <a href="Account/Manage/GenerateRecoveryCodes" class="alert-link">generera nya återställningskoder</a>.</p>
                    </div>
                }
            </div>
        </div>

        <div class="row g-3 mb-4">
            <div class="col-12">
                <div class="d-flex flex-wrap gap-2">
                    @if (isMachineRemembered)
                    {
                        <form @formname="forget-browser" @onsubmit="OnSubmitForgetBrowserAsync" method="post" class="d-inline">
                            <AntiforgeryToken />
                            <button type="submit" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>Glöm denna webbläsare
                            </button>
                        </form>
                    }
                    <a href="Account/Manage/Disable2fa" class="btn btn-outline-danger">
                        <i class="bi bi-shield-x me-2"></i>Inaktivera 2FA
                    </a>
                    <a href="Account/Manage/GenerateRecoveryCodes" class="btn btn-hero">
                        <i class="bi bi-arrow-clockwise me-2"></i>Återställ återställningskoder
                    </a>
                </div>
            </div>
        </div>
    }

    <div class="row g-3">
        <div class="col-12">
            <h5 class="text-muted mb-3">
                <i class="bi bi-phone me-2"></i>Autentiseringsapp
            </h5>
            <div class="d-flex flex-wrap gap-2">
                @if (!hasAuthenticator)
                {
                    <a href="Account/Manage/EnableAuthenticator" class="btn btn-hero">
                        <i class="bi bi-plus-circle me-2"></i>Lägg till autentiseringsapp
                    </a>
                }
                else
                {
                    <a href="Account/Manage/EnableAuthenticator" class="btn btn-hero">
                        <i class="bi bi-gear me-2"></i>Konfigurera autentiseringsapp
                    </a>
                    <a href="Account/Manage/ResetAuthenticator" class="btn btn-outline-warning">
                        <i class="bi bi-arrow-counterclockwise me-2"></i>Återställ autentiseringsapp
                    </a>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>Integritetspolicy och cookies har inte accepterats.</strong>
        <p class="mb-0 mt-2">Du måste acceptera policyn innan du kan aktivera tvåfaktorsautentisering.</p>
    </div>
}
